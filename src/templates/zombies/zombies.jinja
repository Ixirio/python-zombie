{% block content %}

    <div class="flex">
        {% if zombie is not undefined %}
            {{ oo.printZombie(zombie) }}
        {% else %}
            {% for zombie in zombies %}
                {{ oo.printZombie(zombie) }}
            {% endfor %}
        {% endif %}
    </div>

{% endblock content %}
